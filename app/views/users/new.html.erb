<h1>會員註冊</h1>

<%= form_with(model: @user, url: '/users', method: "post") do |form|%>

<div>
    <%= form.label :email%>
    <%= form.email_field :email%>
</div>

<div>
    <%= form.label :username%>
    <%= form.text_field :username%>
</div>

<div>
    <%= form.label :password%>
    <%= form.password_field :password%>
</div>

<div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
</div>

<%= form.submit %>
<% end %>